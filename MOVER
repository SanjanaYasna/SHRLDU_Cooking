; Functions to report the movement of the hand and blocks.

(DEFUN MOVETO (X Y Z)
	(PRINC "~MOVING HAND TO ")
	(PRINC (LIST X Y Z))
	(PRINC "~")
	(TERPRI))

(DEFUN GRASP (X)
	(PRINC "~GRASPING OBJECT ")
	(PRINC X)
	(PRINC "~")
	(TERPRI))

(DEFUN UNGRASP NIL
	(PRINC "~LETTING GO~")
	(TERPRI))

(DEFUN BLINK (X)
	(PRINC "~CHOOSING OBJECT ")
	(PRINC X)
	(PRINC "~")
	(TERPRI))

;; Helper function for chopping action
(DEFUN CHOP (KNIFE OBJ)
	(PRINC "~CHOPPING ")
	(PRINC OBJ)
	(PRINC " WITH ")
	(PRINC KNIFE)
	(PRINC "~")
	(TERPRI)
	T)